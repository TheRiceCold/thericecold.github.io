---
import '../styles/global.css'
import '../styles/aside.css'
import '../styles/blog.css'

import SEO from '../components/SEO.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Sidebar from '../components/Sidebar.astro'
import Navigator from '../components/Navigator.astro'
import MobileSidebar from '../components/MobileSidebar.astro'

const {
  lang, title,
  description, pubDate,
  tags, sidebar
} = Astro.props

---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{Astro.props.title}</title>
  <link rel="icon" type="image/svg+xml" href="/me.svg">
  <SEO {...Astro.props} />
</head>
<body>
  <Header lang={lang}/>
  <main>
    <Sidebar lang={lang} {...sidebar} />
    <Navigator lang={lang} />
    <article>
      <header>
        <b id="title">{title}</b>
        <p>{description}</p>
        <div>
          <date>{pubDate.toLocaleDateString(lang, {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}</date>
          {tags.map(t => <span>{t}</span>)}
        </div>
      </header>
      <slot/>
    </article>
  </main>
  <Footer/>
</body>
</html>
