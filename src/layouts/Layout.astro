---
import '../styles/global.css'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import MobileSidebar from '../components/MobileSidebar.astro'

const {
  page,
  description = "TheRiceCold's Website"
} = Astro.props

---
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" data-i18n="description" data-i18n-attr="content">
  <title data-i18n="title,page" data-i18n-sep=" | "></title>
  <link rel="icon" type="image/svg+xml" href="/me.svg">
</head>
<body>
  <MobileSidebar/>
  <Header/><main id={page}><slot/></main><Footer/>
</body>
</html>
