---
<Layout title="Home" description="TheRiceCold's homepage">
	<Sidebar/>
	<Navigator shortcuts={shortcuts}/>

	<main id="home">
		{/*Intro*/}
		<section>
			<h3>Hello thereðŸ‘‹!</h3>
			<p>This website serves as documentation of my professional background, projects, and insights.</p>
		</section>

		{/*Projects*/}
		<section>
			<h4>Projects</h4>
      <ul>
				{projects.map(p => (<li><a>{p.name}</a> - {p.description}</li>))}
      </ul>
		</section>

		{/*Artworks*/}
		<section>
			<h4>Artworks</h4>
			<div>
			{Array.from({length:8}).fill('').map(i => <img />)}
			</div>
		</section>

		{/*Recent posts*/}
		<section>
			<h4>Recent Posts</h4>
      <ul>
				{posts.map(p => (<li><a>{p.title}</a> <small>{p.date}</small></li>))}
      </ul>
		</section>
	</main>
</Layout>
